@model ProjektMOIS.Model.Competition
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Přidat soutěž";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills nav-stacked">
                <li><a href="/Competition">Přehled soutěží</a></li>
                <li class="active"><a href="/Competition/Create">Přidat</a></li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="alert alert-info">Zadejte název nové soutěže.</div>
            @using (Html.BeginForm("Create", "Competition", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
            { 
                <div class="form-group">
                    <label for="inputNazev" class="col-sm-2 control-label">Název</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", id="inputNazev", placeholder = "Název" })
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="inputTeam" class="col-sm-2 control-label">Tým</label>
                    <div class="col-sm-6">
                        @Html.DropDownListFor(model => model.Team.Id, (IEnumerable<SelectListItem>)ViewBag.TeamItems, "-- Vyberte tým --", new { @class = "form-control", id="inputTym" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-6">
                        <button type="submit" class="btn btn-primary">Vytvořit</button>
                    </div>
                </div>
                @Html.ValidationSummary()
            }
        </div>
    </div>
</div>


