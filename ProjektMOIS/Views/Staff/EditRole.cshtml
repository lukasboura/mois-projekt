@model ProjektMOIS.Model.ViewModels.StaffRoleViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Změnit roli";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills nav-stacked">
                <li><a href="/Staff/EditRoles/@Model.Staff">Zpět</a></li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="alert alert-info">Upravte informace o členu realizačního týmu.</div>
            @using (Html.BeginForm("EditRole", "Staff", new { id = ViewBag.ID }, FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
            { 
                @Html.HiddenFor(model => model.Staff)
                <div class="form-group">
                    <label for="inputTeam" class="col-sm-2 control-label">Tým</label>
                    <div class="col-sm-6">
                        @Html.DropDownListFor(model => model.Team, (IEnumerable<SelectListItem>)ViewBag.Teams, "-- Vyberte tým --", new { @class = "form-control", id = "inputTeam" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputRole" class="col-sm-2 control-label">Role</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Role, new { @class = "form-control", id = "inputRole", placeholder = "Role" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-6">
                        <button type="submit" class="btn btn-primary">OK</button>
                    </div>
                </div>
                if (!ViewData.ModelState.IsValid)
                {
                @Html.ValidationSummary("", new { @class = "alert alert-danger col-md-6 col-md-offset-2" })
                }
            }
        </div>
    </div>
</div>


