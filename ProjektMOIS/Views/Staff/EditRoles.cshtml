@model ProjektMOIS.Model.Staff
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Upravit člena realizačního týmu";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills nav-stacked">
                <li><a href="/Staff/Details/@ViewBag.Staff.Id">@ViewBag.Staff.Name @ViewBag.Staff.Surname</a></li>
                <li><a href="/Staff/Edit/@ViewBag.Staff.Id">Upravit</a></li>
                <li class="active"><a href="/Staff/EditRoles/@ViewBag.Staff.Id">Upravit role</a></li>
                <li><a href="/Staff/CreateRole/@ViewBag.Staff.Id">Přidat roli</a></li>
                <li><a href="/Staff">Zpět</a></li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="alert alert-info">Upravte stávající role.</div>
           @if (@ViewBag.Staff.Teams == null || @ViewBag.Staff.Teams.Count == 0)
            {
                <div class="alert alert-info">Tento zaměstnanec nemá v klubu žádnou funkci.</div>
            }
            else
            {
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Tým</th>
                            <th>Funkce</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ts in ViewBag.Staff.Teams)
                        { 
                            <tr>
                                <td>@ts.Team.Name</td>
                                <td>@ts.Role</td>
                                <td><a href="/Staff/EditRole/@ts.Id" class="btn btn-primary btn-xs" style="margin-right: 5px;">Upravit</a><a href="/Staff/DeleteRole/@ts.Id" class="btn btn-danger btn-xs">Zrušit</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>


