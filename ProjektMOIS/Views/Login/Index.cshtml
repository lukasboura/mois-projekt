@model ProjektMOIS.Controllers.LoginModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Login";
}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default" id="login-form">
                <div class="panel-heading">
                    <h3 class="panel-title">Please sign in</h3>
                </div>
                <div class="panel-body">
                    @if (@TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"] </div>
                    }
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { role = "form" }))
                    { 
                        <fieldset>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-mail" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                            </div>
                            <input class="btn btn-lg btn-success btn-block" type="submit" value="Sign in">
                            <a href="Login/SignUp" class="btn btn-lg btn-primary btn-block" type="submit">Sign up</a>
                            @if (!ViewData.ModelState.IsValid)
                            {
                                @Html.ValidationSummary("", new { @class = "alert alert-danger" })
                            }
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

