@model ProjektMOIS.Model.User

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "SignUp";
}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default" id="login-form">
                <div class="panel-heading">
                    <h3 class="panel-title">Sign up</h3>
                </div>
                <div class="panel-body">
                    @if (@ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@ViewData["ErrorMessage"] </div>
                    }
                    @using (Html.BeginForm("SignUp", "Login", FormMethod.Post, new { role = "form" }))
                    { 
                        @Html.HiddenFor(x => x.Role)
                        <fieldset>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Jméno" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", placeholder = "Příjmení" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-mail" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Heslo" })
                            </div>
                            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Sign up">
                            <a href="/Login" class="btn btn-lg btn-danger btn-block" type="submit">Back</a>
                             @if (!ViewData.ModelState.IsValid)
                            {
                                @Html.ValidationSummary("", new { @class = "alert alert-danger" })
                            }
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

