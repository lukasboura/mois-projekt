@model ProjektMOIS.Model.Team
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Nový tým";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills nav-stacked">
                <li><a href="/Team">Seznam týmů</a></li>
                <li class="active"><a href="/Team/Create">Nový tým</a></li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="alert alert-info">Zadejte název nového týmu.</div>
            @using (Html.BeginForm("Create", "Team", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
            { 
                <div class="form-group">
                    <label for="inputNazev" class="col-sm-2 control-label">Název</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id="inputNazev", placeholder = "Název" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-6">
                        <button type="submit" class="btn btn-primary">Vytvořit</button>
                    </div>
                </div>
                if (!ViewData.ModelState.IsValid)
                {
                    @Html.ValidationSummary("", new { @class = "alert alert-danger col-md-6 col-md-offset-2" })
                }
            }

        </div>
    </div>
</div>


