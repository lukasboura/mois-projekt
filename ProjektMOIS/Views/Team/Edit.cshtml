@model ProjektMOIS.Model.Team
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Upravit název týmu";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills nav-stacked">
                <li><a href="/Team/Details/@Model.Id">@Model.Name</a></li>
                <li class="active"><a href="/Team/Edit/@Model.Id">Upravit</a></li>
                <li><a href="/Team">Zpět</a></li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="alert alert-info">Upravte název týmu <b>@Model.Name</b>.</div>
            @using (Html.BeginForm("Edit", "Team", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
            { 
                <div class="form-group">
                    <label for="inputName" class="col-sm-2 control-label">Nový název</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "inputName", placeholder = "Název" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-4">
                        <button type="submit" class="btn btn-primary">Uložit</button>
                    </div>
                </div>
                if (!ViewData.ModelState.IsValid)
                {
                    @Html.ValidationSummary("", new { @class = "alert alert-danger col-md-6 col-md-offset-2" })
                }
            }
        </div>
    </div>
</div>


